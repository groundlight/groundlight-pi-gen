IMG_NAME='GroundlightNMS'
TARGET_HOSTNAME=GroundlightNMS
FIRST_USER_NAME=glnms

ENABLE_SSH=1

# Makes a qemu-compatible image - for easier testing.
USE_QEMU=1

# stage2 gets us a working "lite" image without desktop.
# stage3 adds basic desktop stuff, which we don't need yet.
# stagegl1 adds the python SDK and supporting libraries like numpy, opencv, framegrab
STAGE_LIST="stage0 stage1 stage2 stagegl1"

# xz is multi-threaded so will run faster!
DEPLOY_COMPRESSION=xz
# zip level 6 (default) got 65% for 5-stages, but took maybe 10 minutes?
COMPRESSION_LEVEL=3

# faster but "experimental" and crashed when I tried it.
#USE_QCOW2=1
